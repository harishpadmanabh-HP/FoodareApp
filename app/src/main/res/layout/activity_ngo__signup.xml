<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/colorPrimaryDark"
    tools:context=".ngo.NGO_Signup">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito"
        android:text="Join to feed the Needy !"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.124487005" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/layout_curve"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline12">

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               >
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="Organization name"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/orgname"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="Registered ID"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/regID"
                       android:maxLines="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="Location"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/location"
                       android:inputType="textPostalAddress"
                       android:maxLength="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="District"
                   app:endIconTint="@color/colorPrimaryDark"
                   app:endIconMode="dropdown_menu"
                   app:endIconDrawable="@drawable/ic_arrow_drop_down_circle_black_24dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                       android:id="@+id/district"
                       android:inputType="textPostalAddress"
                       android:maxLines="1"
                       android:paddingStart="15dp"

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="City"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/city"
                       android:inputType="textPostalAddress"
                       android:maxLines="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="Area"
                   app:endIconTint="@color/colorPrimaryDark"
                   app:endIconMode="dropdown_menu"
                   app:endIconDrawable="@drawable/ic_arrow_drop_down_circle_black_24dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                       android:id="@+id/areacity"
                       android:inputType="textPostalAddress"
                       android:maxLines="1"
                       android:paddingStart="15dp"

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="Email"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/email"
                       android:maxLines="1"
                       android:inputType="textEmailAddress"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:id="@+id/outlinedTextField"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="Phone"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/phone"
                       android:inputType="phone"
                       android:maxLines="1"
                       android:maxLength="10"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>
               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:hint="Password"
                   app:endIconDrawable="@drawable/ic_remove_red_eye_black_24dp"
                   app:endIconTint="@color/colorPrimaryDark"
                   app:endIconMode="password_toggle"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   app:boxStrokeColor="@color/edtBlue"
                   app:errorEnabled="true">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/pass"
                       android:inputType="textPassword"
                       android:maxLines="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </com.google.android.material.textfield.TextInputLayout>

               <Button
                   android:backgroundTint="@color/colorPrimaryDark"
                   android:layout_margin="20dp"
                   android:id="@+id/containedButton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="SIGN UP"
                   android:shadowColor="@color/colorAccent"
                   android:shadowRadius=".5"
                   android:fontFamily="@font/nunito"
                   />
           </LinearLayout>

       </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>